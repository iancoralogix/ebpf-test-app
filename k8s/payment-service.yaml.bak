apiVersion: apps/v1
kind: Deployment
metadata:
  name: payment
  labels:
    app: payment
    service: payment
spec:
  replicas: 2
  selector:
    matchLabels:
      app: payment
  template:
    metadata:
      labels:
        app: payment
        service: payment
    spec:
      containers:
      - name: payment
        image: public.ecr.aws/w3s4j9x9/ianbowers/ebpf-test-app:latest
        ports:
        - containerPort: 8080
        env:
        - name: SERVICE_NAME
          value: "payment"
        - name: SERVER_PORT
          value: "8080"
        - name: NEXT_SERVICE_URL
          value: ""
        - name: IS_LEAF_SERVICE
          value: "true"
        - name: JAVA_OPTS
          value: "-Xmx512m -Xms256m"
        resources:
          requests:
            memory: "256Mi"
            cpu: "250m"
          limits:
            memory: "512Mi"
            cpu: "500m"
        livenessProbe:
          httpGet:
            path: /api/health
            port: 8080
          initialDelaySeconds: 30
          periodSeconds: 10
        readinessProbe:
          httpGet:
            path: /api/health
            port: 8080
          initialDelaySeconds: 5
          periodSeconds: 5
---
apiVersion: v1
kind: Service
metadata:
  name: payment
  labels:
    app: payment
spec:
  selector:
    app: payment
  ports:
  - port: 8080
    targetPort: 8080
    protocol: TCP
  type: ClusterIP 